<%- include('layouts/header') %>
<div class="container">
  <%- include('layouts/searchbar') %>
  <div class="container">
    <div class="row">
      <!-- Left Column for Categories -->
      <div class="col-3">
        <h1>Categories</h1>

        <form id="categoryFilterForm">
          <% categories.forEach(category => { %>
            <p>
              <label>
                <input
                  type="checkbox"
                  class="filled-in"
                  name="category"
                  value="<%= category.name %>"
                  <% if (query.category && query.category.includes(category.name)) { %>
                    checked
                  <% } %>
                />
                <span><%= category.name %></span>
              </label>
            </p>
          <% }); %>
          <button class="btn waves-effect waves-light blue" type="submit">Filter</button>
          <button class="btn waves-effect waves-light red" type="button" id="resetButton">Reset</button>
        </form>



      </div>
      <!-- Right Column for Furniture Table -->
      <div class="col-9">
        <div class="container">
          <div class="row my-4">
            <div class="col-lg-12">
              <div class="table-responsive">
                <% const number = -1; // You can change this value as needed %>
                <table class="table table-striped text-center">
                  <thead>
                    <tr class="table-dark">
                      <th>ID</th>
                      <th>Summary</th>
                      <th>Description</th>
                      <th>Location</th>
                      <th>Category</th>
                      <th>Material</th>
                      <th>Price</th>
                      <th>Posted</th>
                      <th>Action</th> <!-- New column for the "Add to Cart" button -->
                    </tr>
                  </thead>
                  <tbody>
                    <% if (furnitures.length > 0) { %>
                      <% furnitures.forEach((furniture, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= furniture.summary %></td>
                          <td><%= furniture.description %></td>
                          <td><%= furniture.location %></td>
                          <td><%= furniture.category.name %></td> <!-- Display category name -->
                          <td><%= furniture.material %></td>
                          <td>$<%= furniture.price.toFixed(2) %></td>
                          <td><%= furniture.posted.toDateString() %></td>
                          <td>
                            <% if (user) { %>
                              <!-- Check if the user is logged in before showing the button -->
                              <form action="/add-to-cart" method="POST">
                                <input type="hidden" name="productId" value="<%= furniture._id %>">
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                              </form>
                            <% } else { %>
                              <p>Please log in to add to your wishlist.</p>
                            <% } %>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="10"><h1>No data</h1></td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Add JavaScript to handle form submission and Reset button -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Initialize Materialize components
    M.AutoInit();

    // Handle form submission
    document.getElementById("categoryFilterForm").addEventListener("submit", function (e) {
      e.preventDefault(); // Prevent default form submission

      const form = e.target;
      const formData = new FormData(form);
      const selectedCategories = Array.from(formData.getAll("category"));

      // Construct the URL with selected categories
      const categoryParam = selectedCategories.join("&category=");
      const filteredURL = `/search?category=${categoryParam}`;

      // Redirect to the filtered URL
      window.location.href = filteredURL;
    });

    // Handle Reset button click event
    const resetButton = document.getElementById("resetButton");
    resetButton.addEventListener("click", () => {
      // Uncheck all checkboxes
      const checkboxes = document.querySelectorAll('input[type="checkbox"]');
      checkboxes.forEach(checkbox => {
        checkbox.checked = false;
      });

      // Redirect to the search page (http://localhost:3000/search)
      window.location.href = '/search';
    });
  });
</script>


<%- include('layouts/footer') %>
